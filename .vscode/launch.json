{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run Current TS File",
      "program": "${file}",
      "runtimeArgs": ["-r", "ts-node/register"],
      "outFiles": ["${workspaceFolder}/**/*.js"],
      "resolveSourceMapLocations": ["<node_internals>/**", "!**/node_modules/**"]
    }
  ]
}
